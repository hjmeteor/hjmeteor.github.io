<% if (site.tags.length) { %>
  <div class="widget-wrap">
    <h3 class="widget-title">
      <%= __('widget.tag_cloud') %>
    </h3>
    <div class="widget tagcloud">
      <% if (site.tags.length){ %>
        <div class="widget-wrap">
          <div class="widget tagcloud">
            <%- tagcloud(site.tags, {
        min_font: 13,
        max_font: 23,
        amount: 65,
        orderby: 'count',
        color: true,
        start_color: '#60809F',
        end_color: '#0080FF'
      }) %>
          </div>
        </div>
        <% } %>
    </div>
  </div>
  <% } %>